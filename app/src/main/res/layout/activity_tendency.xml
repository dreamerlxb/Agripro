    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="48dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:theme="?attr/actionBarTheme"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="10dp"
            android:src="@mipmap/ic_action_back"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@mipmap/icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="查看走势"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <com.idejie.android.aoc.widget.ListScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:text="地区."
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:text="@string/star_placeholder"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />


                <TextView
                    android:hint="省市"
                    android:background="@drawable/border"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:gravity="left|center|start"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/arrow_down"
                    android:drawableEnd="@mipmap/arrow_down"
                    android:padding="6dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/province"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:text="品种."
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:text="@string/star_placeholder"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:hint="品种"
                    android:id="@+id/type"
                    android:background="@drawable/border"
                    android:textColor="@color/grey"
                    android:gravity="left|center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/arrow_down"
                    android:padding="6dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:drawableEnd="@mipmap/arrow_down" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:text="等级."
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:text="@string/star_placeholder"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/rank"
                    android:hint="级别"
                    android:background="@drawable/border"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:gravity="left|center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/arrow_down"
                    android:padding="6dp"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@mipmap/arrow_down" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line_bg"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <TextView
                    android:text="时间"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:text=".*"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/text_timeS"
                    android:hint="开始"
                    android:background="@drawable/border"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:gravity="left|center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/arrow_down"
                    android:padding="6dp"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@mipmap/arrow_down" />

                <TextView
                    android:id="@+id/text_timeO"
                    android:hint="结束"
                    android:background="@drawable/border"
                    android:textColor="@color/grey"
                    android:textSize="14sp"
                    android:gravity="left|center|start"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/arrow_down"
                    android:padding="6dp"
                    android:layout_marginStart="10dp"
                    android:drawableEnd="@mipmap/arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingBottom="6dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:background="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <Button
                    android:text="折线图"
                    android:id="@+id/btn_line"
                    android:textSize="16sp"
                    android:background="@drawable/border_grey"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="30dp" />

                <Space android:layout_height="wrap_content"
                    android:layout_width="10dp" />

                <Button
                    android:text="表格"
                    android:id="@+id/btn_graph"
                    android:textSize="16sp"
                    android:background="@drawable/border_grey"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="30dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:text="地图"
                    android:id="@+id/btn_map"
                    android:textSize="16sp"
                    android:background="@drawable/border_grey"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="30dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <include
                    android:id="@+id/list_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/empty_data_view" />

                <WebView
                    android:id="@+id/chart_webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ListView
                    android:id="@+id/listView"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

            </FrameLayout>
        </LinearLayout>
    </com.idejie.android.aoc.widget.ListScrollView>
</LinearLayout>
