<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/colorBackground"
            android:contentDescription="@string/yaowen"
            android:scaleType="fitXY"
            android:src="@mipmap/loading" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image">

            <TextView
                android:text="2016-1-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_item_comment"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp"
                android:id="@+id/tv_item_time" />

            <TextView
                android:text="评"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_comment"
                android:layout_alignBaseline="@+id/tv_item_zan"
                android:layout_alignBottom="@+id/tv_item_zan"
                android:layout_toLeftOf="@+id/tv_item_time"
                android:layout_toStartOf="@+id/tv_item_time"
                android:layout_marginRight="43dp"
                android:layout_marginEnd="43dp" />

            <TextView
                android:text="标签"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_tag"
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_item_title"
                android:layout_alignStart="@+id/tv_item_title" />

            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:lines="2"
                android:lineSpacingMultiplier="1.0"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_item_zan"
                android:layout_toStartOf="@+id/tv_item_zan" />

            <TextView
                android:text="赞"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_zan"
                android:layout_below="@+id/tv_item_title"
                android:layout_toLeftOf="@+id/tv_item_comment"
                android:layout_toStartOf="@+id/tv_item_comment"
                android:layout_marginRight="31dp"
                android:layout_marginEnd="31dp" />

            <TextView
                android:text="News ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/tv_item_time"
                android:layout_toStartOf="@+id/tv_item_time"
                android:visibility="invisible"
                android:id="@+id/newsID" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>